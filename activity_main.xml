<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context="com.example.android.quizapp.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/layoutMargin"
        android:layout_marginStart="@dimen/layoutMargin"
        android:orientation="vertical">

        <TextView
            android:id="@+id/scrolling_flags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/topMargin"
            android:ellipsize="marquee"
            android:fadingEdge="horizontal"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:text="@string/flags"
            android:textColor="@color/dark_blue_gray"
            android:textSize="@dimen/smallText" />

        <TextView
            style="@style/Question"
            android:text="@string/one_answer_q01" />

        <RadioGroup
            android:id="@+id/one_answer_q01"
            style="@style/RadioGroup"
            android:layout_marginStart="@dimen/answersMargin">

            <RadioButton
                android:id="@+id/one_answer_q01_a"
                style="@style/RadioButton"
                android:text="@string/one_answer_q01_a" />

            <RadioButton
                android:id="@+id/one_answer_q01_b"
                style="@style/RadioButton"
                android:text="@string/one_answer_q01_b" />

            <RadioButton
                android:id="@+id/one_answer_q01_c"
                style="@style/RadioButton"
                android:text="@string/one_answer_q01_c" />

            <RadioButton
                android:id="@+id/one_answer_q01_d"
                style="@style/RadioButton"
                android:text="@string/one_answer_q01_d" />

        </RadioGroup>

        <TextView
            style="@style/Question"
            android:text="@string/fill_blank_q02" />

        <EditText
            android:id="@+id/fill_blank_q02_text_field"
            style="@style/FillBlankEditText"
            android:layout_marginStart="@dimen/answersMargin" />

        <ImageView
            style="@style/ImageView"
            android:layout_marginStart="@dimen/answersMargin"
            android:contentDescription="@string/fill_blank_q02_content_description"
            android:src="@drawable/macaroni_and_cheese_appetizer_m" />

        <TextView
            style="@style/Question"
            android:text="@string/multiple_answers_q03" />

        <CheckBox
            android:id="@+id/multiple_answers_q03_a"
            style="@style/CheckBox"
            android:layout_marginStart="@dimen/answersMargin"
            android:text="@string/multiple_answers_q03_a" />

        <CheckBox
            android:id="@+id/multiple_answers_q03_b"
            style="@style/CheckBox"
            android:layout_marginStart="@dimen/answersMargin"
            android:text="@string/multiple_answers_q03_b" />

        <CheckBox
            android:id="@+id/multiple_answers_q03_c"
            style="@style/CheckBox"
            android:layout_marginStart="@dimen/answersMargin"
            android:text="@string/multiple_answers_q03_c" />

        <CheckBox
            android:id="@+id/multiple_answers_q03_d"
            style="@style/CheckBox"
            android:layout_marginStart="@dimen/answersMargin"
            android:text="@string/multiple_answers_q03_d" />

        <CheckBox
            android:id="@+id/multiple_answers_q03_e"
            style="@style/CheckBox"
            android:layout_marginStart="@dimen/answersMargin"
            android:text="@string/multiple_answers_q03_e" />

        <TextView
            style="@style/Question"
            android:text="@string/rank_q04" />

        <LinearLayout style="@style/RankLinearLayoutGroup">

            <TextView
                style="@style/RankAnswerTextView"
                android:layout_marginStart="@dimen/qaMargin"
                android:text="@string/rank_q04_a" />

            <EditText
                android:id="@+id/rank_q04_a"
                style="@style/RankEditText"
                android:layout_marginStart="@dimen/answersMargin"
                android:imeOptions="actionNext"
                android:textAlignment="center" />

            <ImageView
                style="@style/RankImageView"
                tools:ignore="ContentDescription" />
        </LinearLayout>

        <LinearLayout style="@style/RankLinearLayoutGroup">

            <TextView
                style="@style/RankAnswerTextView"
                android:layout_marginStart="@dimen/qaMargin"
                android:text="@string/rank_q04_b" />

            <EditText
                android:id="@+id/rank_q04_b"
                style="@style/RankEditText"
                android:layout_marginStart="@dimen/answersMargin"
                android:imeOptions="actionNext"
                android:textAlignment="center" />

            <ImageView
                style="@style/RankImageView"
                tools:ignore="ContentDescription" />
        </LinearLayout>

        <LinearLayout style="@style/RankLinearLayoutGroup">

            <TextView
                style="@style/RankAnswerTextView"
                android:layout_marginStart="@dimen/qaMargin"
                android:text="@string/rank_q04_c" />

            <EditText
                android:id="@+id/rank_q04_c"
                style="@style/RankEditText"
                android:layout_marginStart="@dimen/answersMargin"
                android:imeOptions="actionNext"
                android:textAlignment="center" />

            <ImageView
                style="@style/RankImageView"
                tools:ignore="ContentDescription" />
        </LinearLayout>

        <LinearLayout style="@style/RankLinearLayoutGroup">

            <TextView
                style="@style/RankAnswerTextView"
                android:layout_marginStart="@dimen/qaMargin"
                android:text="@string/rank_q04_d" />

            <EditText
                android:id="@+id/rank_q04_d"
                style="@style/RankEditText"
                android:layout_marginStart="@dimen/answersMargin"
                android:imeOptions="actionNext"
                android:textAlignment="center" />

            <ImageView
                style="@style/RankImageView"
                tools:ignore="ContentDescription" />
        </LinearLayout>

        <LinearLayout style="@style/RankLinearLayoutGroup">

            <TextView
                style="@style/RankAnswerTextView"
                android:layout_marginStart="@dimen/qaMargin"
                android:text="@string/rank_q04_e" />

            <EditText
                android:id="@+id/rank_q04_e"
                style="@style/RankEditText"
                android:layout_marginStart="@dimen/answersMargin"
                android:imeOptions="actionDone"
                android:textAlignment="center" />

            <ImageView
                style="@style/RankImageView"
                tools:ignore="ContentDescription" />
        </LinearLayout>

        <TextView
            style="@style/Question"
            android:text="@string/one_answer_q05" />

        <RadioGroup
            android:id="@+id/one_answer_q05"
            style="@style/RadioGroup"
            android:layout_marginStart="@dimen/answersMargin">

            <RadioButton
                android:id="@+id/one_answer_q05_a"
                style="@style/RadioButton"
                android:text="@string/one_answer_q05_a" />

            <RadioButton
                android:id="@+id/one_answer_q05_b"
                style="@style/RadioButton"
                android:text="@string/one_answer_q05_b" />

            <RadioButton
                android:id="@+id/one_answer_q05_c"
                style="@style/RadioButton"
                android:text="@string/one_answer_q05_c" />

            <RadioButton
                android:id="@+id/one_answer_q05_d"
                style="@style/RadioButton"
                android:text="@string/one_answer_q05_d" />

        </RadioGroup>

        <TextView
            style="@style/Question"
            android:text="@string/fill_blank_q06" />

        <EditText
            android:id="@+id/fill_blank_q06_text_field"
            style="@style/FillBlankEditText"
            android:layout_marginStart="@dimen/answersMargin" />

        <ImageView
            style="@style/ImageView"
            android:layout_marginStart="@dimen/answersMargin"
            android:contentDescription="@string/fill_blank_q06_content_description"
            android:src="@drawable/senet_board_walters" />

        <TextView
            style="@style/Question"
            android:text="@string/rank_q07" />

        <LinearLayout style="@style/RankLinearLayoutGroup">

            <TextView
                style="@style/RankAnswerTextView"
                android:layout_marginStart="@dimen/qaMargin"
                android:layout_weight="@integer/countryWeight"
                android:text="@string/rank_q07_a" />

            <EditText
                android:id="@+id/rank_q07_a"
                style="@style/RankEditText"
                android:layout_marginStart="@dimen/answersMargin"
                android:imeOptions="actionNext"
                android:textAlignment="center" />

            <ImageView
                style="@style/RankImageView"
                tools:ignore="ContentDescription" />
        </LinearLayout>

        <LinearLayout style="@style/RankLinearLayoutGroup">

            <TextView
                style="@style/RankAnswerTextView"
                android:layout_marginStart="@dimen/qaMargin"
                android:text="@string/rank_q07_b" />

            <EditText
                android:id="@+id/rank_q07_b"
                style="@style/RankEditText"
                android:layout_marginStart="@dimen/answersMargin"
                android:imeOptions="actionNext"
                android:textAlignment="center" />

            <ImageView
                style="@style/RankImageView"
                tools:ignore="ContentDescription" />
        </LinearLayout>

        <LinearLayout style="@style/RankLinearLayoutGroup">

            <TextView
                style="@style/RankAnswerTextView"
                android:layout_marginStart="@dimen/qaMargin"
                android:layout_weight="@integer/countryWeight"
                android:text="@string/rank_q07_c" />

            <EditText
                android:id="@+id/rank_q07_c"
                style="@style/RankEditText"
                android:layout_marginStart="@dimen/answersMargin"
                android:imeOptions="actionNext"
                android:textAlignment="center" />

            <ImageView
                style="@style/RankImageView"
                tools:ignore="ContentDescription" />
        </LinearLayout>

        <LinearLayout style="@style/RankLinearLayoutGroup">

            <TextView
                style="@style/RankAnswerTextView"
                android:layout_marginStart="@dimen/qaMargin"
                android:text="@string/rank_q07_d" />

            <EditText
                android:id="@+id/rank_q07_d"
                style="@style/RankEditText"
                android:layout_marginStart="@dimen/answersMargin"
                android:imeOptions="actionNext"
                android:textAlignment="center" />

            <ImageView
                style="@style/RankImageView"
                tools:ignore="ContentDescription" />
        </LinearLayout>

        <LinearLayout style="@style/RankLinearLayoutGroup">

            <TextView
                style="@style/RankAnswerTextView"
                android:layout_marginStart="@dimen/qaMargin"
                android:text="@string/rank_q07_e" />

            <EditText
                android:id="@+id/rank_q07_e"
                style="@style/RankEditText"
                android:layout_marginStart="@dimen/answersMargin"
                android:imeOptions="actionDone"
                android:textAlignment="center" />

            <ImageView
                style="@style/RankImageView"
                tools:ignore="ContentDescription" />
        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/qaMargin"
            android:layout_marginTop="@dimen/answersMargin"
            android:backgroundTint="@color/colorAccent"
            android:onClick="scoreQuiz"
            android:paddingLeft="@dimen/answersMargin"
            android:paddingRight="@dimen/answersMargin"
            android:text="@string/submit_button"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textSize="@dimen/mediumText" />

    </LinearLayout>
</ScrollView>
